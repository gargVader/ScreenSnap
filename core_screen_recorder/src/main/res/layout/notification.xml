<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/pause_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/baseline_pause_24"
        android:drawableTint="@color/primary"
        android:gravity="center"
        android:text="@string/pause" />

    <TextView
        android:id="@+id/resume_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/baseline_play_arrow_24"
        android:drawableTint="@color/primary"
        android:gravity="center"
        android:text="@string/resume"
        android:visibility="gone" />


    <TextView
        android:id="@+id/stop_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/baseline_stop_24"
        android:drawableTint="@color/primary"
        android:gravity="center"
        android:text="@string/stop" />
</LinearLayout>